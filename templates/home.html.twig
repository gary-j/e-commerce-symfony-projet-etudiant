{% extends "base.html.twig" %}
{% block title %}
	Accueil
{% endblock %}
{% block body %}
	<h1>Nos produits phares
	</h1>
	<div class="row">
		{% for p in products %}
			<div class="col">
				<div class="card"><img src="{{p.mainPicture}}" class="img-fluid" alt="Image du produit">
					<div class="card-body">
						<h4 class="card-title">{{p.name}}
							|
							{{p.price / 100}}
							&euro;</h4>
						<span class="badge bg-info">{{p.category.name}}</span>
						<p class="card-text">{{p.shortDescription}}
							<br>
							<a href="{{ path('product_show', {'category_slug': p.category.slug, 'product_slug': p.slug}) }}" class="btn btn-primary btn-sm">Détails</a>
							<a href="#" class="btn btn-success btn-sm">Ajouter</a>
						</p>
					</div>
				</div>
			</div>

		{% endfor %}
	</div>
	<hr>
	<h2>Un service irréprochable</h2>
	<p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Ea recusandae saepe deleniti architecto vero fugit.</p>
	<div class="row">
		{% include "shared/_assurance.html.twig" with {"color":'primary', "icone":'fas fa-truck', "text":"Ici c'est le top !"} %}

		{% include "shared/_assurance.html.twig" with {"color":'success', "icone":'fas fa-check', "text":"Ici c'est le top !"} %}

		{% include "shared/_assurance.html.twig" with {"color":'warning', "icone":'fas fa-lock', "text":"Ici c'est le top !"} %}
	</div>
{% endblock %}
